{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:import/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier",
        "sort-imports-es6-autofix",
        "react-hooks",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "no-console": "error",
        "no-var": "error",
        "no-unused-vars": "error",
        "no-useless-computed-key": "error",
        "no-undefined": "warn",
        "no-promise-executor-return": "warn",
        "no-empty-function": "error",
        "no-implicit-coercion": "error",
        "no-new-wrappers": "error",
        "no-useless-return": "error",
        "no-eq-null": "error",
        "no-plusplus": "warn",
        "no-nested-ternary": "warn",
        "no-unsafe-optional-chaining": "warn",
        "no-alert": "error",
        "no-trailing-spaces": "error",
        "no-spaced-func": "error",
        "no-unneeded-ternary": "error",
        "no-else-return": ["error", { "allowElseIf": false }],
        "no-use-before-define": ["error", { "functions": true, "variables": true }],
        "no-duplicate-imports": "error",
        "object-shorthand": "error",
        "symbol-description": "error",
        "array-callback-return": "error",
        "default-param-last": "error",
        "default-case-last": "error",
        "prefer-object-spread": "error",
        "wrap-regex": "error",
        "prefer-exponentiation-operator": "error",
        "prefer-template": "error",
        "space-infix-ops": "error",
        "handle-callback-err": "error",
        "newline-before-return": "error",
        "comma-dangle": "warn",
        "arrow-spacing": "error",
        "prefer-const": ["error", { "destructuring": "all", "ignoreReadBeforeAssign": false }],
        "eqeqeq": ["error", "always"],
        "newline-after-var": ["off", "always"],
        "arrow-parens": ["error", "always"],
        "max-depth": ["error", 4],
        "max-nested-callbacks": ["warn", 4],
        "func-style": ["error", "expression"],
        "semi-style": ["error", "last"],
        "space-before-blocks": ["error", "never"],
        "space-before-function-paren": ["error", "never"],
        "space-in-parens": ["error", "never"],
        "init-declarations": ["error", "always"],
        "prefer-destructuring": [
            "error",
            {
                "array": true,
                "object": true
            },
            {
                "enforceForRenamedProperties": false
            }
        ],
        "key-spacing": [
            "warn",
            {
                "align": {
                    "beforeColon": true,
                    "afterColon": true,
                    "on": "colon"
                }
            }
        ],

        "sort-imports-es6-autofix/sort-imports-es6": [
            0,
            {
                "ignoreCase": false,
                "ignoreMemberSort": false,
                "memberSyntaxSortOrder": ["none", "all", "multiple", "single"]
            }
        ],

        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",

        "react/jsx-no-constructed-context-values": "warn",
        "react/jsx-closing-bracket-location": ["error", "tag-aligned"],
        "react/react-in-jsx-scope": "off",
        "react/no-array-index-key": "warn",
        "react/prop-types": "off",
        "react/no-danger": "warn",
        "react/no-unknown-property": "error",
        "react/jsx-closing-tag-location": "error",
        "react/no-danger-with-children": "error",
        "react/jsx-child-element-spacing": "error",
        "react/jsx-no-useless-fragment": "warn",
        "react/jsx-props-no-multi-spaces": "error",
        "react/jsx-curly-brace-presence": ["off", { "props": "always", "children": "never" }],
        "react/jsx-tag-spacing": [
            "off",
            {
                "closingSlash": "never",
                "beforeSelfClosing": "never",
                "afterOpening": "never",
                "beforeClosing": "never"
            }
        ],
        "react/jsx-first-prop-new-line": ["error", "multiline-multiprop"],
        "react/no-unstable-nested-components": ["error", { "allowAsProps": false }],
        "react/destructuring-assignment": ["error", "always"],
        "react/jsx-space-before-closing": ["warn", "always"],
        "react/jsx-indent-props": ["error", 4],
        "react/jsx-newline": ["warn", { "prevent": false }],
        "react/jsx-curly-spacing": ["error", { "when": "always", "children": true }],
        "react/jsx-pascal-case": "error",
        "react/jsx-curly-newline": ["error", "consistent"],
        "react/jsx-max-props-per-line": ["error", { "maximum": 3, "when": "always" }],
        "react/jsx-indent": [
            "error",
            4,
            { "indentLogicalExpressions": true, "checkAttributes": false }
        ],
        "react/jsx-wrap-multilines": [
            "error",
            {
                "declaration": "parens-new-line",
                "assignment": "parens-new-line",
                "condition": "parens-new-line",
                "logical": "parens-new-line",
                "prop": "parens-new-line",
                "arrow": "parens-new-line",
                "return": "parens-new-line"
            }
        ],
        "react/jsx-no-target-blank": [
            "error",
            {
                "enforceDynamicLinks": "always"
            }
        ],
        "react/no-unescaped-entities": [
            "error",
            {
                "forbid": [
                    {
                        "char": ">",
                        "alternatives": ["&gt;"]
                    },
                    {
                        "char": "}",
                        "alternatives": ["&#125;"]
                    }
                ]
            }
        ],
        "react/self-closing-comp": [
            "error",
            {
                "component": true,
                "html": true
            }
        ],
        "react/jsx-no-script-url": [
            "error",
            [
                {
                    "name": "Link",
                    "props": ["to"]
                }
            ]
        ],
        "react/jsx-sort-props": [
            "error",
            {
                "callbacksLast": true,
                "shorthandFirst": true,
                "ignoreCase": true
            }
        ],
        "react/jsx-key": [
            "error",
            { "checkFragmentShorthand": true, "checkKeyMustBeforeSpread": true }
        ],

        "jsx-a11y/aria-props": "warn",
        "jsx-a11y/click-events-have-key-events": "warn",
        "jsx-a11y/autocomplete-valid": "warn",
        "jsx-a11y/tabindex-no-positive": "error",
        "jsx-a11y/anchor-is-valid": "warn",
        "jsx-a11y/aria-unsupported-elements": "warn",
        "jsx-a11y/role-supports-aria-props": "error",
        "jsx-a11y/role-has-required-aria-props": "error",
        "jsx-a11y/heading-has-content": "error",
        "jsx-a11y/aria-role": [
            "warn",
            {
                "ignoreNonDOM": true
            }
        ],
        "jsx-a11y/no-static-element-interactions": [
            "warn",
            {
                "handlers": [
                    "onClick",
                    "onMouseDown",
                    "onMouseUp",
                    "onKeyPress",
                    "onKeyDown",
                    "onKeyUp"
                ]
            }
        ],

        "import/no-cycle": ["error", { "maxDepth": 1 }],
        "import/prefer-default-export": "off",
        "import/no-named-as-default": "warn",
        "import/no-extraneous-dependencies": "warn",
        "import/no-unresolved": "off",
        "import/order": [
            "warn",
            {
                "groups": ["builtin", "external", "internal"],
                "pathGroups": [
                    {
                        "pattern": "react",
                        "group": "external",
                        "position": "before"
                    }
                ],
                "pathGroupsExcludedImportTypes": ["react"],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    }
}
